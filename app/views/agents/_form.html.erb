<% if @remote %>
  <fieldset>
    <legend>New Representative</legend>
  </fieldset>
<% end %>
<%= simple_form_for @agent, html: { remote: @remote } do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class='col-sm-4'>
      <div class="form-group">
        <%= f.input :firstName %>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class="form-group">
        <%= f.input :lastName %>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class="form-group">
        <%= f.input :middleInit %>
      </div>
    </div>
  </div>
  <%= hidden_field_tag :client_id, "", class: 'client_id' %>
  <div class="row">
    <div class='col-sm-4'>
      <div class="form-group">
        <%= f.input :phoneH, label: "Primary Number" %>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class="form-group">
        <%= f.input :phoneC, label: "Telephone Number" %>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class="form-group">
        <%= f.input :phoneW, label: "Fax Number" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class='col-sm-12'>
      <div class="form-group">
        <%= f.input :company %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class='col-sm-12'>
      <div class="form-group">
        <%= f.input :email %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class='col-sm-12'>
      <div class="form-group">
        <%= f.input :mailAddress, label: "Mailing Address" %>
      </div>
    </div>
  </div>
  <div class="row">
     <div class='col-sm-6'>
        <div class="form-group">
          <%= f.input :notes,:input_html => { rows: 7, cols: 10 } %>
        </div>
     </div>
  </div>
  <div class="modal-footer">
    <% if @remote %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <% else %>
      <%= link_to "Back", agents_path, class: 'btn btn-info' %>
    <% end %>
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
<script>
  $(document).ready(function(){
    var client_id = $(".client_select").val();
    $(".client_id").val(client_id);
  });
</script>