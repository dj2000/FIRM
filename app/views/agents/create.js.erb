<% if @agent.errors.present? %>
	$(".modal-body").html("<%= escape_javascript(render partial: '/agent_clients/form') %>");
	$(".modal-body").append("<%= escape_javascript(render partial: 'form') %>");
<% else %>
	$('.add-agent').hide()
	$(".agent_select").append("<option value='<%= @agent.id %>' selected> <%= @agent.name %></option>");
	$(".agent_select").attr('disabled', false)
	$(".agent_select").trigger("chosen:updated");
	$(".modal").modal('hide');
<% end %>