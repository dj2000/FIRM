<div class="right">
  <%= select_tag "inspector", options_for_select(@inspectors), class: "form-control inspector_select", prompt: "Select Inspector" %>
</div>
<div class="left">
  <span>
    <% if @appointment %>
      <%= link_to "Back", insp_request_path(@appointment.insp_request), class: "btn btn-primary right" %>
    <% end %>
  </span>
  <br></br>
  <div class="datepicker datepicker-left"></div>
  <div class="full-calendar border"></div>
</div>
<div class="modal" tabindex="-1" role="dialog" data-keyboard="false"></div>
<script>
  $(document).ready(function(){
    $('.datepicker').datepicker({
      daysOfWeekDisabled: [0,6],
      todayHighlight: true
    });
    $('.datepicker').on('changeDate', function (dateText) {
      $('.full-calendar').fullCalendar('gotoDate',new Date(Date.parse(dateText.date)));
      var defaultView = $('.full-calendar').fullCalendar('getView').name;
      $('.full-calendar').fullCalendar("changeView", defaultView);
      update(defaultView);
    });
  })
    
  $('.full-calendar').fullCalendar({
    header: {
        left: '',
        center: 'title',
        right: 'month,agendaWeek,agendaDay'
    },
    defaultView: 'agendaWeek',
    editable: <%= @editable %>,
    hiddenDays: [0],
    selectable: <%= @editable %>,
    selectHelper: true,
    firstDay:1,
    eventStartEditable: false,
    slotEventOverlap: true,
    timeFormat: 'hh:mm A',
    eventSources: [{
      url: "/appointments"
    }],
    eventClick: function(cal_event, js_event, view){
      <% if @editable %>
        calendar_event_clicked(cal_event, js_event, view);
      <% end %>
    },
    select: function(start, end, jsEvent, view) {
      <% if @editable %>
        $('.modal').html('<%= escape_javascript(render partial: "schedule_inspection") %>');
        $(".start_date").val(start.format("YYYY-MM-DD"));
        $(".end_date").val(start.format("YYYY-MM-DD"));
        $(".start_time").val(start.format("h:mm A"));
        var end_time = start.add(2, 'hours').add(30, 'minutes');
        $(".end_time").val(end_time.format("h:mm A"));
        $(".modal").modal('show');
      <% end %>
    }
  });

  function calendar_event_clicked(cal_event, js_event, view){
    $.ajax({
      type: "GET",
      url: "/appointments/" + cal_event.id + "/edit.js"
    });
  }

  $(".fc-month-button").on("click", function(){
    update("month");
  });
  $(".fc-agendaWeek-button").on("click", function(){
    update("agendaWeek");
  });
  $(".fc-agendaDay-button").on("click", function(){
    update("agendaDay");
  });

  function update(view){
    var date = $(".datepicker").datepicker("getDate");
    if(date == null){
      date = new Date();
    }
    var inspector_id = $(".inspector_select").val();
    $.ajax({
      type: "GET",
      url: "/appointments/get_scheduled_appointments",
      data: { date: date, view_type: view, inspector_id: inspector_id},
      dataType: 'JSON',
      success: function(result){
        $('.full-calendar').fullCalendar('removeEvents');
        $('.full-calendar').fullCalendar('addEventSource', result );
      }
    });
  }

  $(".inspector_select").change(function(){
    var inspector_id = $(this).val();
    var start_date = $('.full-calendar').fullCalendar('getView').start.format("YYYY-MM-DD");
    var end_date = $('.full-calendar').fullCalendar('getView').end.format("YYYY-MM-DD");
    var defaultView = $('.full-calendar').fullCalendar('getView').name;
    $.ajax({
      type: "GET",
      url: "/appointments/get_scheduled_appointments",
      data: { start_date: start_date, end_date: end_date, view_type: defaultView, inspector_id: inspector_id},
      dataType: 'JSON',
      success: function(result){
        $('.full-calendar').fullCalendar('removeEvents');
        $('.full-calendar').fullCalendar('addEventSource', result );
      }
    });
  });
</script>