<% referrer = request.referrer.include?("schedule_inspection") %>
<% if @appointment.errors.present? %>
	<% if referrer %>
		$(".modal-body").html("<%= escape_javascript(render partial: 'schedule_inspection') %>")
	<% else %>
		$(".add-appointment-form").html("<%= escape_javascript(render partial: 'form') %>")
		$(".alert.alert-danger").append("<br/><%= @appointment.errors[:base].first if @appointment.errors[:base].present? %>")
	<% end %>
<% else %>
	<% if referrer %>
		$(window.location.replace('/insp_requests/<%= @appointment.insp_request.id %>'))
	<% else %>
		$(window.location.replace('/insp_requests'))
	<% end %>
<% end %>