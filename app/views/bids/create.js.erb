<% if @bid.errors.present? %>
	$(".modal-body").html("<%= escape_javascript(render partial: 'form') %>")
<% else %>
	<% if request.referrer.include?("bids") %>
		window.location = "<%= bids_path %>"
	<% else %>
		$('.bid').html("<%= escape_javascript(render template: 'bids/index', locals: { bids: @inspection.bids }) %>");
		$(".modal").modal('hide');
	<% end %>
<% end %>