<table class='table table-bordered table-striped table-responsive table-hover'>
  <thead>
    <tr>
      <th>Client Attributes</th>
      <th>Values</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= @client.name %></td>
    </tr>
    <tr>
      <td>Home Number</td>
      <td><%= number_to_phone(@client.phoneH) %></td>
    </tr>
    <tr>
      <td>Office Number</td>
      <td><%= number_to_phone(@client.phoneW) %></td>
    </tr>
    <tr>
      <td>Cell Number</td>
      <td><%= number_to_phone(@client.phoneC) %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= @client.email %></td>
    </tr>
    <tr>
      <td>Client Type</td>
      <td><%= @client.client_type %></td>
    </tr>
    <tr>
      <td>Opt Out of Mailing List</td>
      <td><%= @client.opt_out_mailer? %></td>
    </tr>
    <tr>
      <td>Mail Address</td>
      <td><%= @client.mailAddress %></td>
    </tr>
  </tbody>
</table>
<h4>Associated Customers:</h4>
<table class='table table-bordered table-striped table-responsive table-hover'>
  <tr>
    <th>Name</th>
    <th>Home Number</th>
    <th>Office Number</th>
    <th>Cell Number</th>
    <th>Email</th>
    <th>Mail Address</th>
  </tr>
  <% @client.associated_customers.each do |associated_customer| %>
    <tr>
      <td><%= associated_customer.name %></td>
      <td><%= number_to_phone(associated_customer.phoneH) %></td>
      <td><%= number_to_phone(associated_customer.phoneW) %></td>
      <td><%= number_to_phone(associated_customer.phoneC) %></td>
      <td><%= associated_customer.email %></td>
      <td><%= associated_customer.mailAddress %></td>
    </tr>
  <% end %>
</table>