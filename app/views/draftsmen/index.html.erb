<h1>Draftsmen</h1>

<table class='table table-bordered table-striped table-hover table-responsive'>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Middle initial</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @draftsmen.each do |draftsman| %>
      <tr>
        <td><%= draftsman.first_name %></td>
        <td><%= draftsman.last_name %></td>
        <td><%= draftsman.middle_initial %></td>
        <td><%= draftsman.email %></td>
        <td><%= link_to raw("<i class='fa fa-eye'></i> Show"), draftsman, class: 'btn btn-primary' %></td>
        <td><%= link_to raw("<i class='fa fa-pencil-square-o'></i> Edit"), edit_engineer_path(draftsman), class: 'btn btn-info' %></td>
        <td><%= link_to raw("<i class='fa fa-trash-o'></i> Destroy"), draftsman, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Draftsman', new_draftsman_path, :class => "btn btn-info" %>
