$('.agent_select').empty();
$('.agent_select').html("<option>Select Customer</option><%= escape_javascript(options_for_select(@agents)) %>");
<% if @agents.present? %>
	$(".agent_select").attr('disabled', false)
<% else %>
	$(".agent_select").attr('disabled', true)
<% end %>
$(".agent_select").trigger("chosen:updated");