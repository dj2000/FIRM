<div class="panel panel-primary">
  <div class="panel-heading">
    <h1 class="panel-title">Inspection Request</h1>
  </div>
  <div class="panel-body">
    <table class='table table-bordered table-striped table-hover table-responsive'>
      <thead>
        <tr>
          <th>Inspector Attributes</th>
          <th>Values</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Call Time</td>
          <td><%= @insp_request.call_time %></td>
        </tr>
        <tr>
          <td>Caller type</td>
          <td><%= @insp_request.callerType %></td>
        </tr>
        <tr>
          <td>Referral Source</td>
          <td><%= @insp_request.referalSource %></td>
        </tr>
        <tr>
          <td>Client</td>
          <td>
            <%= @insp_request.client.try(:name) %>
            <% if @insp_request.client %>
              <%= link_to client_path(@insp_request.client), remote: true, class: 'link' do %>
                <i class='fa fa-eye'></i> Details
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Associated Clients</td>
          <td>
            <% @insp_request.try(:property).try(:clients).each do |client| %>
              <span>
                <strong>Name:&nbsp;&nbsp;</strong><%= client.name %>
              </span>
              <span>
                <strong>Phone:&nbsp;&nbsp;</strong><%= client.phoneC %>
              </span>
              <span>
                <strong>Email:&nbsp;&nbsp;</strong><%= client.email %>
              </span>
              <%= link_to client_path(client), remote: true, class: 'link' do %>
                <i class='fa fa-eye'></i> Details
              <% end %>
              <br/>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Representative</td>
          <td>
            <%= @insp_request.agent.try(:name) %>
            <% if @insp_request.agent %>
              <%= link_to agent_path(@insp_request.agent), remote: true, class: 'link' do %>
                <i class='fa fa-eye'></i> Details
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Property</td>
          <td>
            <%= @insp_request.property.try(:property_select_value) %>
            <% if @insp_request.property %>
              <%= link_to property_path(@insp_request.property), remote: true, class: 'link' do %>
                <i class='fa fa-eye'></i> Details
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Inspection Selection Criteria</td>
          <td><%= @insp_request.selectInsp %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="add-appointment-form">
  <%= render partial: '/appointments/form' %>
</div>
<div class="modal modal-details" tabindex="-1" role="dialog" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>