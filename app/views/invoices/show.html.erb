<div class="panel panel-primary">
  <div class="panel-heading">
    <h1 class="panel-title">Inspection Request</h1>
  </div>
  <div class="panel-body">
    <table class='table table-bordered table-striped table-hover table-responsive'>
      <thead>
        <tr>
          <th>Invoice Attributes</th>
          <th>Values</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Reference</td>
          <td><%= @invoice.reference %></td>
        </tr>
        <tr>
          <td>Type</td>
          <td><%= @invoice.invoice_type %></td>
        </tr>
        <tr>
          <td>Inspection</td>
          <td><%= @invoice.try(:inspection).try(:name) %></td>
        </tr>
        <tr>
          <td>Project</td>
          <td><%= @invoice.try(:project).try(:title) %></td>
        </tr>
        <tr>
          <td>Description</td>
          <td><%= @invoice.description %></td>
        </tr>
        <tr>
          <td>Invoice Date</td>
          <td><%= @invoice.try(:invoiceDate).try(:strftime, "%d %b %Y") %></td>
        </tr>
        <tr>
          <td>Invoice Amount</td>
          <td><%= @invoice.amount %></td>
        </tr>
        <tr>
          <td>Due Date</td>
          <td><%= @invoice.try(:due_date).try(:strftime, "%d %b %Y") %></td>
        </tr>
        </tbody>
    </table>
  </div>
</div>
<%= link_to 'Back', invoices_path, class: "btn btn-info" %>
