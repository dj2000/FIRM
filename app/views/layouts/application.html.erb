<!DOCTYPE html>
<html>
<head>
  <title>Firm</title>

  <%= stylesheet_link_tag    'application', "chosen-bootstrap", media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name == 'sessions' ? 'background' : '' %>">
  <%= render 'layouts/header' %>
  <!-- Devise start-->
  <% if notice %>
  <p class="alert alert-success">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </p>
  <% end %>
  <!--Devise end    -->
  <div class="container">
    <%= yield %>
  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
