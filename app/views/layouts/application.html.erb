<!DOCTYPE html>
<html>
<head>
  <title>Firm</title>

  <%= stylesheet_link_tag    'application', "chosen-bootstrap", media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="height:100%;">
  <%= render 'layouts/header' %>

  <% if devise_controller? %>
    <div class="login">
      <%= image_tag('building.png', alt: "Home Page Banner", style: "width: 100%; height: 100%;")%>
    </div>
  <% end %>
  <!-- Devise start-->
  <% if notice %>
  <p class="alert alert-success">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  </p>
  <% end %>
  <!--Devise end    -->
  <div class="container content-height <%= 'height' if controller_name == 'sessions' %>">
    <%= yield %>
  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
