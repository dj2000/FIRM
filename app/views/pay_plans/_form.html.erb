<%= simple_form_for(@pay_plan) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :jobMinAmt, label: "Amount Range Start" %>
    </div>
    <div class="col-md-6">
      <%= f.input :jobMaxAmt, label: "Amount Range End" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :pmt1Pcnt, label: "1st Payment" %>
    </div>
    <div class="col-md-6">
      <%= f.input :pmt2Pcnt, label: "2nd Payment" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :pmt3Pcnt, label: "3rd Payment" %>
    </div>
    <div class="col-md-6">
      <%= f.input :pmt4Pcnt, label: "4th Payment" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :pmt5Pcnt, label: "5th Payment" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to "Back", pay_plans_path, class: "btn btn-info" %>