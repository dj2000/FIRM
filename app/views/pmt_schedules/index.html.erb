<h1>Listing pmt_schedules</h1>

<table class='table table-bordered table-striped table-responsive table-hover'>
  <thead>
    <tr>
      <th>Contract</th>
      <th>Pmtnumber</th>
      <th>Pmtdate</th>
      <th>Pmtamount</th>
      <% if request.format == 'text/html' %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @pmt_schedules.each do |pmt_schedule| %>
      <tr>
        <td><%= pmt_schedule.contract_id %></td>
        <td><%= pmt_schedule.pmtNumber %></td>
        <td><%= pmt_schedule.pmtDate %></td>
        <td><%= pmt_schedule.pmtAmount %></td>
        <% if request.format == 'text/html' %>
          <td><%= link_to 'Show', pmt_schedule %></td>
          <td><%= link_to 'Edit', edit_pmt_schedule_path(pmt_schedule) %></td>
          <td><%= link_to 'Destroy', pmt_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if request.format == 'text/html' %>
  <%= link_to raw("<i class='fa fa-plus-square-o'></i> New Payment Plan"), new_pmt_schedule_path, :class => "btn btn-info" %>
  <%= link_to raw("<i class='fa fa-file'></i> Export To CSV"), pmt_schedules_path(format: :csv),class: "btn btn-info" %>
  <%= link_to raw("<i class='fa fa-print'></i> Print"), print_pmt_schedules_path, remote: true,class: "btn btn-info" %>
<% end %>
