<%= simple_form_for user, url: user_path(user), remote: true do |f| %>
  <%= f.association :role, collection: Role.get_role, prompt: " Select Role ",
    :label_method => lambda { |role| "#{role.name.try(:humanize)}" }, label: "Select Role"  %>
  <%= f.input :status, as: :radio_buttons, collection: User::USER_STATUS, checked: f.object.status, label: false, input_html: {name: "user_#{f.object.id}[status]"}  %>
  <%= f.button :submit, class: 'btn btn-info pull-right' %>
<% end %>