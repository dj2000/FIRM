<%= simple_form_for user, url: change_role_user_path(user), remote: true, method: :post  do |f| %>
  <div class='row'>
    <div class = "col-md-4">
      <%= f.input :role_id, as: :select, label: false, collection: Role.all.map{|v| [v.title, v.id]}, select: user.try(:role).try(:name) %>
    </div>
    <div class = "col-md-4" >
      <%= f.input :status, as: :radio_buttons, label: false, collection: User::USER_STATUS, item_wrapper_class: 'inline' %>
    </div>
    <div class = "col-md-4">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>