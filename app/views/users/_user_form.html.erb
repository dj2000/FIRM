		<div class="col-sm-6">
			<%= f.input :first_name %>
			<%= f.hidden_field :is_active, value: false  %>
		</div>
	</div>
</div>
<div class="row">
	<div class="form-group">
		<div class="col-sm-6">
			<%= f.input :last_name %>
