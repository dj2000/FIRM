<table class="table table-bordered table-striped table-hover table-responsive">
  <thead>
    <tr>
      <th> Name </th>
      <th> Email</th>
      <th> Assign Role </th>
      <th> Approve User </th>
      <th> Action </th>
    </tr>
  </thead>
  <tbody>
    <% type = type ? type : @user.status.downcase %>
    <% instance_variable_get("@#{type}_users").each do |user| %>
      <tr>
        <td><%= user.name.try(:titleize) %></td>
        <td><%= user.email %></td>
        <%= render partial: 'form', :locals => {user: user} %>
      </tr>
    <% end %>
  </tbody>
</table>


